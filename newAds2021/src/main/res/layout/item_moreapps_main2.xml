<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


            <FrameLayout
                android:id="@+id/fl_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ad_moreapps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="3dp"
                    android:background="@drawable/bg_btn_moreapps"
                    android:paddingHorizontal="3dp"
                    android:text="AD"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/appimage"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/bg_btn_moreapps" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="Google"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="5dp"
                        android:ellipsize="marquee"
                        android:textSize="14sp" />

                </LinearLayout>


            </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_install"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="-15dp"
        android:background="@drawable/btn_background_moreapps"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="Install"
        android:textColor="@color/black" />
</LinearLayout>
